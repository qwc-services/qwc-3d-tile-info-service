{
  "$schema": "https://raw.githubusercontent.com/qwc-services/qwc-3d-tile-info-service/master/schemas/qwc-3d-tile-info-service.json",
  "service": "tileinfo",
  "config": {
    "info_datasets": {
      "buildings" : {
        "dataset": "tests/buildings.gpkg",
        "layername": "ax_gebaeude",
        "idfield": "gml_id",
        "type": "gpkg",
        "attribute_aliases": {
          "gebaeudefunktion": "Geb√§udefunktion",
          "ax_gebaeudefunktion_beschreibung": "Beschreibung",
          "ax_gebaeudefunktion_dokumentation": "Dokumentation"
        },
        "attribute_blacklist": [
          "gml_id"
        ],
        "styles": {
          "default": {
            "query": "SELECT styleSLD FROM layer_styles WHERE f_table_name = 'ax_gebaeude'"
          }
        }
      },
      "countries" : {
        "dataset": "postgresql:///?service=qwc_geodb",
        "layername": "qwc_geodb.ne_10m_admin_0_countries",
        "idfield": "ogc_fid",
        "type": "postgres",
        "attribute_aliases": {
          "gdp_year": "GDP per Year"
        },
        "attribute_blacklist": [
          "ogc_fid", "level"
        ],
        "styles": {
          "countrycolor": {
            "filename": "tests/countries.sld"
          }
        }
      }
    }
  }
}
